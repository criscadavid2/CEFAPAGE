

<section id="blog"> 
            <div class="container">
              <div class="row text-center clearfix">
                <div class="col-sm-8 col-sm-offset-2">
                  <h2 class="title-one">Es Noticia en el CEFA</h2>
                  <p class="blog-heading">Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>
                </div>
              </div> 

<p id="notice"><%= notice %></p>


<% @posts.each do |post| %>  
  
  
                <div class="col-sm-4">
                  <div class="single-blog">
                    <%= image_tag post.avatar.url.to_s %>
                    <h2><%= post.Titulo %></h2>
                    <ul class="post-meta">
                      <li><i class="fa fa-pencil-square-o"></i><strong> Posted By:</strong> <%= post.user.email %></li>
                      <li><i class="fa fa-clock-o"></i><strong> Posted On:</strong> <%= post.Fecha_Publicación %></li>
                    </ul>
                    <div class="blog-content">
                      <p><%= post.descripcion %></p>
                    </div>


        <%= link_to 'Show', post %>
        <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%= link_to 'New Post', new_post_path %>

                    <a href="" class="btn btn-primary" data-toggle="modal" data-target="#blog-detail">Leer más</a>
                  </div>

                  <div class="modal fade" id="blog-detail" tabindex="-1" role="dialog" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-body">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                          <img src="images/blog/3.jpg" alt="" />
                          <h2><%= post.Titulo %></h2>
                          <%= image_tag post.avatar.url.to_s %>
                        </div> 
                      </div>
                    </div>
                  </div>
                

        
    
  </div>  
  <% end %>
              
 

         
 </div>
 </section>

